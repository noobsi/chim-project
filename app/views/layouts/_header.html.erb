<header>
    <div style="position: absolute; top: 25px; left: 5px;">
        <%= render partial: "layouts/search_bar", layout: "layouts/search_bar" %>
    </div>
    
    <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, method: :delete do %>
            <div class="button-container-2" style="position: absolute; top: 0px; right: 0px;">
                <span class="mas">LOGOUT</span>
                <button type="button" name="Hover">LOGOUT</button>
            </div>
        <% end %>
        <%= link_to current_user, method: :get do %>
            <div style="position: absolute; top: 0px; right: 100px;">
                <%= image_tag(current_user.avatar, size: "50x50")%>
            </div>
        <% end %>
    <% else %>
        <%= link_to new_user_session_path, :action => 'go' do %>
            <div class="button-container-2" style="position: absolute; top: 0px; right: 0px;">
                <span class="mas">ログイン</span>
                <button type="button" name="Hover">ログイン</button>
            </div>
        <% end %>
        <%= link_to new_user_registration_path, :action => 'go' do %>
            <div class="button-container-1" style="position: absolute; top: 0px; right: 100px;">
                <span class="mas">登録</span>
                <button type="button" name="Hover">登録</button>
            </div>
        <% end %>     
    <% end %>
</header>
