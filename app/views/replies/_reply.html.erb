<div class="record" id="record-#{review.id}">
  <li>
    <%= avatar_for(reply.user) %>
    <strong><%= reply.user.user_name %></strong><br>
    <span><%= reply.content %></span><br>
    <strong>Replied at </strong>
    <span><%= reply.updated_at.localtime.strftime("%d-%m-%Y, %H:%M") %></span>
  </li>
</div>
