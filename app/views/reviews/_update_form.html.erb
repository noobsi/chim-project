        <input type="radio" id="easy_rating-4" name="review[rating_easy]" value="40" <% if b.rating_easy == 40 %> checked <% end %>>
        <label class="easy_ratingControl-stars ratingControl-stars--4" for="easy_rating-4">4</label>
        <input type="radio" id="easy_rating-35" name="review[rating_easy]" value="35" <% if b.rating_easy == 35 %> checked <% end %>>
        <label class="easy_ratingControl-stars ratingControl-stars--35 ratingControl-stars--half" for="easy_rating-35">35</label>
        <input type="radio" id="easy_rating-3" name="review[rating_easy]" value="30" <% if b.rating_easy == 30 %> checked <% end %>>
        <label class="easy_ratingControl-stars ratingControl-stars--3" for="easy_rating-3">3</label>
        <input type="radio" id="easy_rating-25" name="review[rating_easy]" value="25" <% if b.rating_easy == 25 %> checked <% end %>>
        <label class="easy_ratingControl-stars ratingControl-stars--25 ratingControl-stars--half" for="easy_rating-25">25</label>
        <input type="radio" id="easy_rating-2" name="review[rating_easy]" value="20" <% if b.rating_easy == 20 %> checked <% end %>>
        <label class="easy_ratingControl-stars ratingControl-stars--2" for="easy_rating-2">2</label>
        <input type="radio" id="easy_rating-15" name="review[rating_easy]" value="15" <% if b.rating_easy == 15 %> checked <% end %>>
        <label class="easy_ratingControl-stars ratingControl-stars--15 ratingControl-stars--half" for="easy_rating-15">15</label>
