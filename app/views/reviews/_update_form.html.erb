<%= form_for [@bird, @bird.review_user(current_user.id)], remote: true do |f| %>
  <div class="container">
    <% b = @bird.review_user(current_user.id) %>
    <h4>
      最新レビュー <%= b.updated_at.strftime("%Y-%m-%d, %H:%M") %>
    </h4>
    <div class="review-form-text">
      <%= f.text_area :comment, class: "form-control" %>
    </div>
    <div class="demo">
      <div class="ratingControl rating_label_middle">
        声:
      </div>
      <div class="ratingControl">
        <input type="radio" id="rating-5" name="review[rating]" value="50" <% if b.rating == 50 %> checked <% end %>>
        <label class="ratingControl-stars ratingControl-stars--5" for="rating-5">5</label>
        <input type="radio" id="rating-45" name="review[rating]" value="45" <% if b.rating == 45 %> checked <% end %>>
        <label class="ratingControl-stars ratingControl-stars--45 ratingControl-stars--half" for="rating-45">45</label>
        <input type="radio" id="rating-4" name="review[rating]" value="40" <% if b.rating == 40 %> checked <% end %>>
        <label class="ratingControl-stars ratingControl-stars--4" for="rating-4">4</label>
        <input type="radio" id="rating-35" name="review[rating]" value="35" <% if b.rating == 35 %> checked <% end %>>
        <label class="ratingControl-stars ratingControl-stars--35 ratingControl-stars--half" for="rating-35">35</label>
        <input type="radio" id="rating-3" name="review[rating]" value="30" <% if b.rating == 30 %> checked <% end %>>
        <label class="ratingControl-stars ratingControl-stars--3" for="rating-3">3</label>
        <input type="radio" id="rating-25" name="review[rating]" value="25" <% if b.rating == 25 %> checked <% end %>>
        <label class="ratingControl-stars ratingControl-stars--25 ratingControl-stars--half" for="rating-25">25</label>
        <input type="radio" id="rating-2" name="review[rating]" value="20" <% if b.rating == 20 %> checked <% end %>>
        <label class="ratingControl-stars ratingControl-stars--2" for="rating-2">2</label>
        <input type="radio" id="rating-15" name="review[rating]" value="15" <% if b.rating == 15 %> checked <% end %>>
        <label class="ratingControl-stars ratingControl-stars--15 ratingControl-stars--half" for="rating-15">15</label>
        <input type="radio" id="rating-1" name="review[rating]" value="10" <% if b.rating == 10 %> checked <% end %>>
        <label class="ratingControl-stars ratingControl-stars--1" for="rating-1">1</label>
        <input type="radio" id="rating-05" name="review[rating]" value="5" <% if b.rating == 5 %> checked <% end %>>
        <label class="ratingControl-stars ratingControl-stars--05 ratingControl-stars--half" for="rating-05">05</label>
      </div>
    </div>
    <div class="demo">
      <div class="ratingControl rating_label_middle">
        値段:
      </div>
      <div class="price_ratingControl">
        <input type="radio" id="price_rating-5" name="review[rating_price]" value="50" <% if b.rating_price == 50 %> checked <% end %>>
        <label class="price_ratingControl-stars ratingControl-stars--5" for="price_rating-5">5</label>
        <input type="radio" id="price_rating-45" name="review[rating_price]" value="45" <% if b.rating_price == 45 %> checked <% end %>>
        <label class="price_ratingControl-stars ratingControl-stars--45 ratingControl-stars--half" for="price_rating-45">45</label>
        <input type="radio" id="price_rating-4" name="review[rating_price]" value="40" <% if b.rating_price == 40 %> checked <% end %>>
        <label class="price_ratingControl-stars ratingControl-stars--4" for="price_rating-4">4</label>
        <input type="radio" id="price_rating-35" name="review[rating_price]" value="35" <% if b.rating_price == 35 %> checked <% end %>>
        <label class="price_ratingControl-stars ratingControl-stars--35 ratingControl-stars--half" for="price_rating-35">35</label>
        <input type="radio" id="price_rating-3" name="review[rating_price]" value="30" <% if b.rating_price == 30 %> checked <% end %>>
        <label class="price_ratingControl-stars ratingControl-stars--3" for="price_rating-3">3</label>
        <input type="radio" id="price_rating-25" name="review[rating_price]" value="25" <% if b.rating_price == 25 %> checked <% end %>>
        <label class="price_ratingControl-stars ratingControl-stars--25 ratingControl-stars--half" for="price_rating-25">25</label>
        <input type="radio" id="price_rating-2" name="review[rating_price]" value="20" <% if b.rating_price == 20 %> checked <% end %>>
        <label class="price_ratingControl-stars ratingControl-stars--2" for="price_rating-2">2</label>
        <input type="radio" id="price_rating-15" name="review[rating_price]" value="15" <% if b.rating_price ==15 %> checked <% end %>>
        <label class="price_ratingControl-stars ratingControl-stars--15 ratingControl-stars--half" for="price_rating-15">15</label>
        <input type="radio" id="price_rating-1" name="review[rating_price]" value="10" <% if b.rating_price == 10 %> checked <% end %>>
        <label class="price_ratingControl-stars ratingControl-stars--1" for="price_rating-1">1</label>
        <input type="radio" id="price_rating-05" name="review[rating_price]" value="5" <% if b.rating_price == 5 %> checked <% end %>>
        <label class="price_ratingControl-stars ratingControl-stars--05 ratingControl-stars--half" for="price_rating-05">05</label>
      </div>
    </div>
    <div class="demo">
      <div class="ratingControl rating_label_middle">
        飼い易さ:
      </div>
      <div class="easy_ratingControl">
