<%= form_for [@bird, @bird.review_user(current_user.id)], remote: true do |f| %>
  <div class="container">
    <% b = @bird.review_user(current_user.id) %>
    <h4>
      Last reviewed at <%= b.updated_at.strftime("%Y-%m-%d, %H:%M") %>
    </h4>
    <div class="review-form-text">
      <%= f.text_area :comment, class: "form-control" %>
    </div>
    <div class="demo">
      <div class="ratingControl rating_label_middle">
        Voice:
      </div>
      <div class="ratingControl">
        <input type="radio" id="rating-5" name="review[rating]" value="50">
        <label class="ratingControl-stars ratingControl-stars--5" for="rating-5">5</label>
        <input type="radio" id="rating-45" name="review[rating]" value="45">
        <label class="ratingControl-stars ratingControl-stars--45 ratingControl-stars--half" for="rating-45">45</label>
        <input type="radio" id="rating-4" name="review[rating]" value="40">
        <label class="ratingControl-stars ratingControl-stars--4" for="rating-4">4</label>
        <input type="radio" id="rating-35" name="review[rating]" value="35">
        <label class="ratingControl-stars ratingControl-stars--35 ratingControl-stars--half" for="rating-35">35</label>
        <input type="radio" id="rating-3" name="review[rating]" value="30">
        <label class="ratingControl-stars ratingControl-stars--3" for="rating-3">3</label>
        <input type="radio" id="rating-25" name="review[rating]" value="25">
        <label class="ratingControl-stars ratingControl-stars--25 ratingControl-stars--half" for="rating-25">25</label>
        <input type="radio" id="rating-2" name="review[rating]" value="20">
        <label class="ratingControl-stars ratingControl-stars--2" for="rating-2">2</label>
        <input type="radio" id="rating-15" name="review[rating]" value="15">
        <label class="ratingControl-stars ratingControl-stars--15 ratingControl-stars--half" for="rating-15">15</label>
        <input type="radio" id="rating-1" name="review[rating]" value="10">
        <label class="ratingControl-stars ratingControl-stars--1" for="rating-1">1</label>
        <input type="radio" id="rating-05" name="review[rating]" value="5">
        <label class="ratingControl-stars ratingControl-stars--05 ratingControl-stars--half" for="rating-05">05</label>
      </div>
    </div>
    <div class="demo">
      <div class="ratingControl rating_label_middle">
        Price:
      </div>
      <div class="price_ratingControl">
        <input type="radio" id="price_rating-5" name="review[rating_price]" value="50">
        <label class="price_ratingControl-stars ratingControl-stars--5" for="price_rating-5">5</label>
        <input type="radio" id="price_rating-45" name="review[rating_price]" value="45">
        <label class="price_ratingControl-stars ratingControl-stars--45 ratingControl-stars--half" for="price_rating-45">45</label>
        <input type="radio" id="price_rating-4" name="review[rating_price]" value="40">
        <label class="price_ratingControl-stars ratingControl-stars--4" for="price_rating-4">4</label>
        <input type="radio" id="price_rating-35" name="review[rating_price]" value="35">
        <label class="price_ratingControl-stars ratingControl-stars--35 ratingControl-stars--half" for="price_rating-35">35</label>
        <input type="radio" id="price_rating-3" name="review[rating_price]" value="30">
        <label class="price_ratingControl-stars ratingControl-stars--3" for="price_rating-3">3</label>
        <input type="radio" id="price_rating-25" name="review[rating_price]" value="25">
        <label class="price_ratingControl-stars ratingControl-stars--25 ratingControl-stars--half" for="price_rating-25">25</label>
        <input type="radio" id="price_rating-2" name="review[rating_price]" value="20">
        <label class="price_ratingControl-stars ratingControl-stars--2" for="price_rating-2">2</label>
        <input type="radio" id="price_rating-15" name="review[rating_price]" value="15">
        <label class="price_ratingControl-stars ratingControl-stars--15 ratingControl-stars--half" for="price_rating-15">15</label>
        <input type="radio" id="price_rating-1" name="review[rating_price]" value="10">
        <label class="price_ratingControl-stars ratingControl-stars--1" for="price_rating-1">1</label>
        <input type="radio" id="price_rating-05" name="review[rating_price]" value="5">
        <label class="price_ratingControl-stars ratingControl-stars--05 ratingControl-stars--half" for="price_rating-05">05</label>
      </div>
    </div>
    <div class="demo">
      <div class="ratingControl rating_label_middle">
        Easy to raise:
      </div>
      <div class="easy_ratingControl">
        <input type="radio" id="easy_rating-5" name="review[rating_easy]" value="50">
        <label class="easy_ratingControl-stars ratingControl-stars--5" for="easy_rating-5">5</label>
        <input type="radio" id="easy_rating-45" name="review[rating_easy]" value="45">
        <label class="easy_ratingControl-stars ratingControl-stars--45 ratingControl-stars--half" for="easy_rating-45">45</label>
        <input type="radio" id="easy_rating-4" name="review[rating_easy]" value="40">
        <label class="easy_ratingControl-stars ratingControl-stars--4" for="easy_rating-4">4</label>
        <input type="radio" id="easy_rating-35" name="review[rating_easy]" value="35">
        <label class="easy_ratingControl-stars ratingControl-stars--35 ratingControl-stars--half" for="easy_rating-35">35</label>
        <input type="radio" id="easy_rating-3" name="review[rating_easy]" value="30">
        <label class="easy_ratingControl-stars ratingControl-stars--3" for="easy_rating-3">3</label>
        <input type="radio" id="easy_rating-25" name="review[rating_easy]" value="25">
        <label class="easy_ratingControl-stars ratingControl-stars--25 ratingControl-stars--half" for="easy_rating-25">25</label>
        <input type="radio" id="easy_rating-2" name="review[rating_easy]" value="20">
        <label class="easy_ratingControl-stars ratingControl-stars--2" for="easy_rating-2">2</label>
        <input type="radio" id="easy_rating-15" name="review[rating_easy]" value="15">
        <label class="easy_ratingControl-stars ratingControl-stars--15 ratingControl-stars--half" for="easy_rating-15">15</label>
        <input type="radio" id="easy_rating-1" name="review[rating_easy]" value="10">
        <label class="easy_ratingControl-stars ratingControl-stars--1" for="easy_rating-1">1</label>
        <input type="radio" id="easy_rating-05" name="review[rating_easy]" value="5">
        <label class="easy_ratingControl-stars ratingControl-stars--05 ratingControl-stars--half" for="easy_rating-05">05</label>
      </div>
    </div>
    <div class="review-form-submit">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
