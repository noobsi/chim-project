<div id="colorlib-page-top-padding">
  <div id="colorlib-main">
    <div class="colorlib-blog">
      <div class="colorlib-narrow-content">
        <div class="row">
          <div class="col-md-6 col-md-offset-3 col-md-pull-3 animate-box" data-animate-effect="fadeInLeft">
            <span class="heading-meta">Species</span>
            <h2 class="colorlib-heading">All species</h2>
          </div>
        </div>
        <div class="animate-box" data-animate-effect="fadeInLeft">
          <h2 class="heading-results">
            Total species: <%= @species.total_count %>
          </h2>
          <%= render partial: "species/species_index", layout: "species/species_index" %>
        </div>
      </div>
    </div>
  </div>
</div>
