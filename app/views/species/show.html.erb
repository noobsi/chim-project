<div id="colorlib-page-top-padding">
	<div id="colorlib-main">
    <div class="colorlib-blog">
      <div class="colorlib-narrow-content">

        <div class="row">
          <div class="col-md-12 col-md-offset-3 col-md-pull-3 animate-box" data-animate-effect="fadeInLeft">
            <h2 class="colorlib-heading">
              <%= @species.species_name %>
            </h2>

            <p>
              <%= @species.species_info %>
            </p>

            <p>
              <strong>Min price:</strong>
              <%= @birds.minimum("bird_price") %>
            </p>

            <p>
              <strong>Max price:</strong>
              <%= @birds.maximum("bird_price") %>
            </p>

            <p>
              <strong><%= @species.review_count %> users has reviewed <%= @species.species_name %></strong>
              <div class="update-rating"><strong>Average rating: <%= @species.rating %>/5</strong></div>
            </p>

          </div>
        </div>
        <%= render partial: "species/species_show", layout: "species/species_show" %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_species_path(@species) %> |
<%= link_to 'Back', species_index_path %>
